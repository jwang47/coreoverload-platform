<% if @game_servers.empty? %>
  no game servers found<br>
<% else %>
  game servers<br>
  <% @game_servers.each do |server| %>
  <%= server.id %>: <%= server.ip_address %>
  (<%= server.num_players %>/<%= server.max_players %> players)
  <%= server.num_red_players %> Red | <%= server.num_blue_players %> Blue
  (<%= server.started_elapsed %>)
  (<%= server.heartbeat_elapsed %>)
  <br>
  <% end %>
<% end %>

<br>
<%= link_to "check servers", game_server_check_path %>
